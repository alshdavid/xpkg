<h1># Shell Scripts # <small><a href="https://github.com/alshdavid/install-scripts">Github</a></small></h1>

<h2>üê•üçé Unix</h2>

<% 
  for (const file of await ctx.fs.readdir(ctx.path.join(ctx.root, 'dist'))) { 
    if (file.endsWith('.md')) continue
    const docName = ctx.path.parse(file).name + '.md'
%>
<% if (ctx.fs.exists(ctx.path.join(ctx.root, 'dist', docName, ))) { %>
<%- await include(ctx.path.join(ctx.root, 'dist', docName)) %>
<% } else if (file.endsWith('.sh')) { %>
  <article>
  <h3><%= file %></h3>
  <code>
  eval $(curl -sSf "sh.davidalsh.com/<%= file %>" | sh -s -- --version=latest --out-dir=./)
  </code>
  </article>
<% } else if (file.endsWith('.bash')) { %>
  <article>
  <h3><%= file %></h3>
  <code>
  eval $(curl -sSf "sh.davidalsh.com/<%= file %>" | bash)
  </code>
  </article>
<% } %>
<% } %>


<h2>üü¶ Windows</h2>

<% 
  for (const file of await ctx.fs.readdir(ctx.path.join(ctx.root, 'dist'))) { 
    if (file.endsWith('.md')) continue
    const docName = ctx.path.parse(file).name + '.md'
%>
<% if (ctx.fs.exists(ctx.path.join(ctx.root, 'dist', docName))) { %>
<%- await include(ctx.path.join(ctx.root, 'dist', docName)) %>
<% } else if (file.endsWith('.ps1')) { %>
  <article>
  <h3><%= file %></h3>
  <code>
  iex ((New-Object System.Net.WebClient).DownloadString('https://sh.davidalsh.com/<%= file %>'))
  </code>
  </article>
<% } %>
<% } %>
